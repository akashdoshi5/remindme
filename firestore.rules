rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // USERS COLLECTION
    // Strictly allow access only to the user themselves
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Subcollections (reminders, caregivers) inherit strict ownership
      match /reminders/{reminderId} {
        allow read, write: if isOwner(userId);
      }
      match /caregivers/{caregiverId} {
        allow read, write: if isOwner(userId);
      }
    }

    // NOTES COLLECTION (Root Level for Sharing)
    match /notes/{noteId} {
      // Allow create: Any auth user can create a note (must set themselves as owner)
      allow create: if isAuthenticated() 
                   && request.resource.data.ownerId == request.auth.uid;

      // Allow read: If owner OR if in sharedWith list
      allow read: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.token.email in resource.data.sharedWith
      );

      // Allow update: Only owner (for now) or shared users if we wanted collaborative editing
      // Allow update: Owner OR Shared users (but Shared users cannot change sharing settings)
      allow update: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        (
          request.auth.token.email in resource.data.sharedWith &&
          request.resource.data.ownerId == resource.data.ownerId &&
          request.resource.data.sharedWith == resource.data.sharedWith
        )
      );

      // Allow delete: STRICTLY Only owner
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
  }
}
